@model ASI.Basecode.Data.Models.Donation

<div class="pt-5">
    <h1>Create Donation</h1>

    <form method="post" asp-action="Create">
        <div class="form-group">
            <label>Donator</label>
            <input type="text" class="form-control" asp-for="Donator">
            <span asp-validation-for="Donator" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" rows="3" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
