@model IEnumerable<ASI.Basecode.Data.Models.Donation>

<div class="container pt-5">
    <a asp-controller="Donation" asp-action="Create" class="btn btn-outline-primary">Create Donation</a>
    <div class="row">
        @if (Model == null || !Model.Any())
        {
            <h4 class="card-text font-weight-bold">No donations to display</h4>
        }
        else
        {
            @foreach (var donation in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h4 class="card-text font-weight-bold">@donation.Donator</h4>
                            <p class="card-text"><b>@donation.Description</b></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">@donation.DateTimeCreated.ToString("dd/MM/yyyy hh:mm tt")</small>
                            </div>
                            <a href="@Url.Action("Edit", "Donation", new { id = donation.Id })" class="btn btn-outline-primary">Edit</a>
                            <a href="@Url.Action("Delete", "Donation", new { id = donation.Id })" class="btn btn-outline-primary">Delete</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
