@model IEnumerable<ASI.Basecode.Data.Models.Contacts>

<div class="container pt-5">
    <a asp-controller="Contacts" asp-action="Create" class="btn btn-outline-primary">Create Contact</a>
    <div class="row">
        @if (Model == null || !Model.Any())
        {
            <h4 class="card-text font-weight-bold">No contacts to display</h4>
        }
        else
        {
            @foreach (var contact in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h4 class="card-text font-weight-bold">@contact.Name</h4>
                            <p class="card-text"><b>@contact.Number</b></p>
                            <p class="card-text">By <b>@contact.Address</b></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">@contact.DateTimeCreated.ToString("dd/MM/yyyy hh:mm tt")</small>
                            </div>
                            <a href="@Url.Action("Edit", "Contacts", new { id = contact.Id})" class="btn btn-outline-primary">Edit</a>
                            <a href="@Url.Action("Delete", "Contacts", new { id = contact.Id})" class="btn btn-outline-primary">Delete</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
