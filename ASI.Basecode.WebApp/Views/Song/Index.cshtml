@model IEnumerable<ASI.Basecode.Data.Models.Song>

<div class="container pt-5">
    <a asp-controller="Song" asp-action="Create" class="btn btn-outline-primary mb-3">Add Song</a>

    <div class="row">
        @if (Model == null || !Model.Any())
        {
            <h4 class="card-text font-weight-bold">No songs to display</h4>
        }
        else
        {
            @foreach (var song in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card border-0" style="background-color: transparent">
                        <div class="card-body text-center">
                            <div class="song-item" onclick="toggleDetails(this)">
                                <h5 class="card-title font-weight-bold">@song.Title</h5>
                                <div class="song-details" style="display: none; text-align: left;">
                                    <p class="card-text font-weight-lighter"><b>Artist: @song.Artist</b></p>
                                    <p class="card-text">Album: <b>@song.Album</b></p>
                                    <p class="card-text">Release Date: <b>@song.ReleaseDate.ToString("dd/MM/yyyy")</b></p>
                                   
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">@song.DateTimeCreated.ToString("dd/MM/yyyy")</small>
                                    </div>
                                    <div class="mt-3 d-flex justify-content-between">
                                        <a asp-action="Edit" asp-route-id="@song.Id" class="btn btn-warning">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@song.Id" class="btn btn-danger">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script>
        let openDetails = null; // Variable to track currently open details

        function toggleDetails(element) {
            const details = element.querySelector('.song-details');

            // If there is currently an open details section
            if (openDetails && openDetails !== details) {
                // Close the previously open details
                openDetails.style.display = 'none';
            }

            // Toggle the clicked details
            if (details.style.display === 'none' || details.style.display === '') {
                details.style.display = 'block'; // Show details
                openDetails = details; // Update the currently open details
            } else {
                details.style.display = 'none'; // Hide details
                openDetails = null; // Reset the currently open details
            }
        }
    </script>
}
